<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
      <property name="connection.url">jdbc:h2:mem:db</property>
      <property name="connection.driver_class">org.h2.Driver</property>
      <property name="connection.username">sa</property>
      <property name="connection.password"></property>
      <property name="hibernate.show_sql">true</property>
      <mapping class="com.spring.data.entity.Pet"/>
      <mapping class="com.spring.data.entity.Pet_Owner"/>
      <mapping class="com.spring.data.entity.Owner"/>
      <mapping class="com.spring.data.entity.Address"/>
      <mapping class="com.spring.data.entity.Image"/>
      <mapping class="com.spring.data.entity.ImageContent"/>
      <mapping class="com.spring.data.entity.Product"/>
      <mapping class="com.spring.data.entity.City"/>
      <mapping class="com.spring.data.entity.Employee"/>
      <mapping class="com.spring.data.entity.Address"/>
      <mapping class="com.spring.data.entity.Vet"/>
      <mapping class="com.spring.data.entity.Visit"/>
      <mapping class="com.spring.data.entity.Speciality"/>
      <mapping class="com.spring.data.entity.PetType"/>


    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>
